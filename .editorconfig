root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,cjs,mjs,json}]
quote_type = single
indent_size = 2

[*.{html,htm,css}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off
